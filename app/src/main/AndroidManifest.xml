<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mae.fhdo.appgebrueht">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityRezeptUebersicht"
            android:label="@string/title_activity_rezept_uebersicht"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ActivityRezeptDetailansicht"
            android:label="Rezept Detailansicht"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".activities.ActivityHotOrNot"
            android:label="@string/title_activity_hot_or_not"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>